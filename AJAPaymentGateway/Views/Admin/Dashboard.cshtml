@model DashboardViewModel
@{
    Layout = "_Layout";
}

<h3>Dashboard</h3>

<div class="row g-3">
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6>Total Payments</h6>
                <h3>@Model.TotalPayments</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-warning">
                <h6>Pending</h6>
                <h3>@Model.PendingPayments</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-success">
                <h6>Success</h6>
                <h3>@Model.SuccessPayments</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-danger">
                <h6>Failed</h6>
                <h3>@Model.FailedPayments</h3>
            </div>
        </div>
    </div>
</div>
